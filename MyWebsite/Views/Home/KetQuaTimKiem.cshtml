@using PagedList.Mvc;
@using PagedList;
@model IPagedList<MyWebsite.Models.Manga>

@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="leftCol">
    <div class="breadcrumb breadcrumbs">
        <p>
            <a href="/Home/Index">
                <span>Manga Online</span>
            </a>
            <span>»</span>
            <span style="color:white">Search manga</span>
        </p>
    </div>
    <div class="daily-update" style="margin-top:5px">
        <h3 class="title update-title">Keyword: @ViewBag.TuKhoa</h3>
        <div class="panel_story_list">
            @*Từng truyện*@
            @foreach (var truyen in Model)
            {
                <div class="story_item">
                    <a rel="nofollow" href="/manga/@truyen.Alias-@truyen.MangaId">
                        <img src="~/Images/BookCover/@truyen.CoverLink" onError="this.onerror=null;this.src='/Images/Error404/error-404.jpg';" alt="@truyen.FullName" />
                    </a>
                    <div class="story_item_right">
                        <h3 class="story_name">
                            <a href="/manga/@truyen.Alias-@truyen.MangaId">@truyen.FullName</a>
                            <em class=""></em>
                        </h3>
                        @Html.Action("GetLasted2Chapter", "Home", new { id = @truyen.MangaId })
                        <span>Author(s) : @truyen.Author</span>
                        <span>Updated : Nov-06-2019 12:26</span>
                        <span>View : @Html.Action("ViewNumber", "Home", new { id = @truyen.MangaId })</span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div style="clear: both"></div>
    @*<div style="background: #FFF; float: left; margin-top: 10px;padding: 10px; width: calc(100% - 20px);">
            <div class="fb-comments" data-href="http://manganelo.com/story_list" data-width="100%" data-numposts="10" data-colorscheme="light"></div>
        </div>*@
    <div id="loadpage">
        <div class="xem-them">
            <!-- Pagination -->
            <ul class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { page = page }), new PagedListRenderOptions { DisplayEllipsesWhenNotShowingAllPageNumbers = false })
            </ul>
        </div>
    </div>
</div>
