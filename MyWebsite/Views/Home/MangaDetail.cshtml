
@model MyWebsite.Models.Manga
@using MyWebsite.ViewModels.Account;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    AccountModel nguoi = (AccountModel)Session["UserInfo"];
}
<div class="leftCol">
    <div style="float: left;width: 100%;text-align: center;">
        @*<div style="max-width: 100%; width: 728px; height: 90px; margin: 0px auto; overflow: hidden;">
                <iframe src="/ads/adtrue_728x90_desktop.html" scrolling="no" frameborder="0" style="width: 728px;height: 90px;"></iframe>
            </div>*@
    </div>
    <div class="breadcrumb breadcrumbs">
        <div class="rdfa-breadcrumb">
            <div>
                <p>
                    <span class="breadcrumbs-title"></span>
                    <span @*itemscope itemtype="http://data-vocabulary.org/Breadcrumb"*@>
                        <a itemprop="url" href="/Home/Index" class="home" title="Trang chủ">
                            <span itemprop="title">Trang chủ</span>
                        </a>
                    </span>
                    <span class="separator">»</span>
                    <span @*itemscope itemtype="http://data-vocabulary.org/Breadcrumb"*@>
                        @*<a itemprop="url" href="https://mangakakalot.com/manga/cd919002">*@
                        <span itemprop="title" style="color:white">@Model.FullName</span>
                        @*</a>*@
                    </span>
                </p>
            </div>
        </div>
    </div>
    <div class="manga-info-top" id="manga-info-top">
        <div class="manga-info-pic">
            <img src="~/Cover/@Model.CoverLink" onError="this.onerror=null;this.src='/RootPicture/error-404.jpg';" alt="@Model.FullName" />
            @*<span onclick="movetolistchapter();" class="btn_chapterslist">DANH SÁCH CHƯƠNG</span>*@
        </div>
        <ul class="manga-info-text">
            <li>
                <h1>@Model.FullName</h1>
                @* <h2 class="story-alternative">Tên khác</h2> *@
            </li>
            <li>
                Tác giả :
                <a href="/author/@Model.Author">@Model.Author</a>
            </li>
            <li>Trạng thái : Ongoing</li>
            <li>Cập nhật gần nhất : @Model.UpdateAt.ToShortDateString()</li>
            <li style="display: none;">TransGroup : </li>
            <li>Lượt xem: @Html.Action("ViewNumber", "Home", new { id = @Model.MangaId })</li>
            <li>
                Thể loại :
                @Html.Action("MangaGenres", "Home", new { id = @Model.MangaId })
            </li>
            <li>
                @if (nguoi != null)
                {
                   @Html.Action("BookmarkSpan", "Home", new { mangaId = ViewBag.MangaId, userId=nguoi.AccountId})
                }
                else
                {
                    <span class="bookmarkb" id="notlogin"><i class="fa fa-heart"></i> Thêm Bookmark</span>
                }

            </li>

            @*<li class="li_bookmark"><div id="Bookmark"><a onclick="addnote();"><img src="https://mangakakalot.com/themes/home/images/theodoi.png" style="height: 50px;"></a></div></li>*@
