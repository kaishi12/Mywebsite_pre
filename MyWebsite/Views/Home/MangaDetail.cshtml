    @Html.Action("MangaChapter", "Home", new { id = @Model.MangaId, language = ViewBag.CurLang })

    <div class="comment-info">
        <div class="fb-comments" data-href="https://tentrangweb.com/@ViewBag.MangaAlias-@ViewBag.MangaId" data-numposts="10" data-width="100%"></div>
    </div>
