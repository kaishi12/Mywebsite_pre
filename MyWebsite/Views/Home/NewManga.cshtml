<div class="xem-nhieu">
    <h3 class="title all-title">Truyện vừa tạo</h3>
    <div class="all">
        @foreach (var truyen in Model)
        {
            <div class="xem-nhieu-item">
                @*<h3><a href="/manga/@truyen.Alias-@truyen.MangaId" title="Truyện @truyen.FullName vừa được tạo, cần người gia nhập">Truyện @truyen.FullName vừa được tạo, cần người gia nhập</a></h3>*@
                <a href="/manga/@truyen.MangaAlias-@truyen.MangaId/@truyen.DefaultLang" title="Truyện @truyen.FullName vừa được tạo, cần người gia nhập"><img src="~/Cover/@truyen.CoverLink" onError="this.onerror=null;this.src='/RootPicture/error-404.jpg';" /></a>
            </div>
        }
    </div>
</div>
