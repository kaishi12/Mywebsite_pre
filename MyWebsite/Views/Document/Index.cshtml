@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    * {
        box-sizing: border-box
    }

    body {
        font-family: Verdana, sans-serif;
        margin: 0
    }

    .mySlides {
        display: none
    }

    img {
        vertical-align: middle;
    }

    /* Slideshow container */
    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }

    /* Next & previous buttons */
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        padding: 16px;
        margin-top: -22px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
    }

    /* Position the "next button" to the right */
    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

        /* On hover, add a black background color with a little bit see-through */
        .prev:hover, .next:hover {
            background-color: rgba(0,0,0,0.8);
        }

    /* Caption text */
    .text {
        color: #f2f2f2;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* The dots/bullets/indicators */
    .dot {
        cursor: pointer;
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

        .active, .dot:hover {
            background-color: #717171;
        }

    /* Fading animation */
    .fadeaway {
        opacity: 1;
        -webkit-animation-name: fade;
        -webkit-animation-duration: 1.5s;
        animation-name: fade;
        animation-duration: 1.5s;
    }

    @@-webkit-keyframes fade {
        from {
            opacity: .4
        }

        to {
            opacity: 1
        }
    }

    @@keyframes fade {
        from {
            opacity: .4
        }

        to {
            opacity: 1
        }
    }

    /* On smaller screens, decrease text size */
    @@media only screen and (max-width: 300px) {
        .prev, .next, .text {
            font-size: 11px
        }
    }
</style>
<div class="padding">
    <div class="row">
        <div class="col-sm-2" style="padding-left:12px;padding-right:12px">
            <div class="box">
                <div class="box-header yellow">Menu</div>
                <div class="p-y">
                    <div class="nav-active-border left b-{{app.setting.theme.primary}}">
                        <ul class="list-unstyled m-t-n-sm">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-10">
            <div class="tab-content pos-rlt">
                
            </div>



        </div>
    </div>
</div>
<script>
            $(document).ready(function () {
                LoadDocument();
            });

            var slideIndex = 1;


            function plusSlides(n, id) {
                console.log(id);
                let tab = "tab-" + id;
                showSlides(slideIndex += n,tab);
            }

            function currentSlide(n, id) {
                console.log(id);
                let tab = "tab-" + id;
                showSlides(slideIndex = n,tab);
            }

            function showSlides(n, id) {
                console.log(id);
                var i;
                var tab = document.getElementById(id);
                var slides = tab.getElementsByClassName("mySlides");
                var dots = tab.getElementsByClassName("dot");
                if (n > slides.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = slides.length }
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex - 1].style.display = "block";
                dots[slideIndex - 1].className += " active";
            }
            function LoadDocument() {
                 $.ajax({
                type: 'POST',
                url: '@Url.Action("LoadDocument", "Document")',
             success: function (result) {
                 result.sort((a, b) => a.Order - b.Order);
                 $.each(result, function (arrayID, item) {
                     const tab = "tab-" + item.Order;
                     if (arrayID == 0) {
                         $(".list-unstyled").append('<li class="nav-item"><a class="nav-link block active" active aria-expanded="" data-toggle="tab" data-target="#' + tab + '">' + item.Name + '</a></li>');
                         $(".tab-content").append('<div class="tab-pane active" aria-expanded="true" id=' + tab + '>');
                         $("#" + tab).append('<div  style="padding-bottom:2em;">this is ' + tab + '</div>');
                        
                     }
                     else {
                         $(".list-unstyled").append('<li class="nav-item"><a class="nav-link block" data-toggle="tab" data-target="#' + tab + '">'+item.Name+'</a></li>');
                        $(".tab-content").append('<div class="tab-pane" id='+tab+'>');
                        $("#"+tab).append('<div  style="padding-bottom:2em;">this is '+tab+'</div>');
                     }
                      
                     if (item.Image != null) {
                         $("#"+tab).append('<div id="divtest'+item.Order+'" class="slideshow-container"> <a class="prev" onclick="plusSlides(-1,'+item.Order+')">&#10094;</a><a class="next" onclick="plusSlides(1,'+item.Order+')">&#10095;</a> </div> <br /> <div id="divtest'+tab+'" style="text-align:center"> </div>');
                         const listimg = item.Image.split(";");
                        
                         $.each(listimg, function (order, image) {
                             const num = order + 1;
                            $("#divtest"+tab).append(' <span class="dot" onclick="currentSlide('+num+','+item.Order+')"></span>');
                         });
                          $.each(listimg, function (order, image) {
                             const num = order + 1;
                            $("#divtest"+item.Order).append(' <div class="mySlides fadeaway"><div class="numbertext">3 / 3</div><img src='+image+' style="width:100%"><div class="text">Caption Three</div></div>');
                          });
                          showSlides(slideIndex,tab);
                     }
                       
                  });
                }
            });
                
            }

</script>

