@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using MyWebsite.ViewModels.Account;
@model MyWebsite.ViewModels.Account.AccountModel
@{
    AccountModel accountModel = (AccountModel)HttpContext.Current.Session["Userinfo"];
}

<div id="m" class="modal" data-backdrop="true" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content black">
            <div class="modal-header">
                <h5 class="modal-title text-primary">Cập nhật hình ảnh</h5>
                <button id="uploadbutton" type="button" class="btn primary p-x-md">Tải ảnh lên</button>
            </div>
            <div class="modal-body text-center p-lg">
                <input id="AnhBia" hidden type="file" onchange="readURL(this);" />
                <img id="Imganhbia" class="img-responsive" src="~/Avatar/@accountModel.AvatarLink">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn danger p-x-md" data-dismiss="modal">Hủy</button>
                <button type="button" id="UploadImageButton" class="btn primary p-x-md">Lưu</button>
            </div>
        </div><!-- /.modal-content -->
    </div>
</div>
<div id="Info" class="modal" data-backdrop="true" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content black">
            <form id="formUpdateInfo" role="form" class="p-a-md ">
                <div class="modal-header">
                    <h5 class="modal-title text-primary">Cập nhật thông tin</h5>

                </div>
                <div class="modal-body  p-lg">

                    <input id="AccountId" class="form-control" name="AccountId" hidden value="@accountModel.AccountId" />
                    <div class="form-group">
                        <label>Tên</label>
                        <input name="FullName" type="text" value="@accountModel.FullName" class="form-control">
                    </div>

                    <div class=" row m-b">
                        <div class="form-group col-sm-6">
                            <label>Số điện thoại</label>
                            <input name="PhoneNumber" type="text" value="@accountModel.PhoneNumber" class="form-control">
                        </div>
                        <div class="form-group col-sm-6">
                            <label>Email</label>
                            <input name="Email" type="text" value="@accountModel.Email" class="form-control">
                        </div>
                    </div>

                    <div class="form-group ">
                        <label>FacebookLink</label>
                        <input name="FacebookLink" type="text" value="@accountModel.FacebookLink" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>TwitterLink</label>
                        <input name="TwitterLink" type="text" value="@accountModel.TwitterLink" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>InstagramLink</label>
                        <input name="InstagramLink" type="text" value="@accountModel.InstagramLink" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        <textarea name="Note" class="form-control has-value" rows="3" placeholder="Type something...">@accountModel.Note</textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark-white p-x-md" data-dismiss="modal">Hủy</button>
                    <button class="btn danger p-x-md">Lưu</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div>
</div>
<div id="Pass" class="modal" data-backdrop="true" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cập nhật mật khẩu</h5>
            </div>
            <form id="UpdatePasswordform" ui-jp="parsley" role="form" class=" p-a-0">
                <div class="modal-body p-lg">
                    <div class="p-a-md">
                        <div class="clearfix m-b-lg">

                            <div class="form-group">
                                <label>Mật khẩu cũ</label>
                                <input id="OldPassWord" name="OldPassWord" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input id="PassWord" name="PassWord" type="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input type="password" class="form-control" data-parsley-equalto="#PassWord" data-parsley-equalto-message="Mật khẩu không trùng khớp" required="" data-parsley-id="10">
                            </div>


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn dark-white p-x-md" data-dismiss="modal">Hủy</button>
                        <button id="UpdatePassword" type="button" class="btn danger p-x-md">Lưu</button>
                    </div>

                </div><!-- /.modal-content -->
            </form>
        </div>
    </div>
</div>
<div class="item" data-step="2" data-intro="XYZ">
    <div class="item-bg">
        <img src="~/Avatar/@accountModel.AvatarLink" class="blur opacity-3" />

    </div>
    <div class="p-a-md">
        <div class="row m-t">
            <div class="col-sm-7">
                <a data-toggle="modal" data-target="#m" class="pull-left m-r-md">
                    <span class="avatar w-128">
                        <img src="~/Avatar/@accountModel.AvatarLink">
