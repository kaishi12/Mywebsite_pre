                                                    {
                                                        <td class="text-info">@item.RoleFullName <br />(@item.LanguageFullname)</td>
                                                    }


                                                    @if (item.StatusActive == 1)
                                                    {
                                                        <td style="padding-top:3px;text-align:center"><button  id="ChangeStatus" value="@(item.UserName + "; " + item.MangaId + "; " + item.RoleId + "; 0; " + item.Language)  " class="btn btn-danger ChangeStatus">Chưa duyệt</button> </td>
                                                    }
                                                    else
                                                    {
                                                        <td style="padding-top:3px;text-align:center"><button  id="ChangeStatus" value="@(item.UserName + ";" + item.MangaId + ";" + item.RoleId + ";1;" + item.Language)" class="btn btn-info ChangeStatus">Đã duyệt</button> </td>
                                                    }


                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                            
                        </div>

                    </div>
                </div>
    </div>
</div>
    </div>
    </div>
@if (ViewBag.Mess == "Fail")
{
