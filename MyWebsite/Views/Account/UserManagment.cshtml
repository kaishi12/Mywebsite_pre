                                                    }
                                                    else
                                                    {
                                                        <td style="padding-top:3px;text-align:center"><button disabled id="ChangeStatus" value="@(item.UserName + ";" + item.MangaId + ";" + item.RoleId + ";1;" + item.Language)" class="btn btn-info ChangeStatus">Đã duyệt</button> </td>
                                                    }


                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane animated fadeIn text-muted " id="tab7" aria-expanded="false">
                            <div class="table-responsive">
                                <table ui-jp="dataTable" class="table table-striped b-t b-b">
                                    <thead>
                                        <tr>

                                            <th class="text-center">Tên truyện</th>
                                            
                                            <th class="text-center">Tên người dùng</th>
                                            <th class="text-center">Vai trò</th>
                                            <th class="text-center">Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Invite)
                                        {
                                            if (item.UserName == accountModel.UserName)
                                            {
                                                <tr>

                                                    <td>@item.MangaFullName</td>
                                                   
                                                    <td style="text-align:center">@item.UserName</td>
                                                    @if (item.LanguageFullname == null)
                                                    {
                                                        <td class="text-info">@item.RoleFullName</td>
                                                    }
