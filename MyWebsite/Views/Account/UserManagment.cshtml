                    </span>
                </a>

                <div class="clear m-b">
                    <h3 class="m-0 m-b-xs">@accountModel.FullName</h3>
                    <p class="text-muted"><span class="m-r">UX/UI Director</span> <small><i class="fa fa-map-marker m-r-xs"></i>London, UK</small></p>
                    <div class="block clearfix m-b">
                        @if (accountModel.FacebookLink != null)
                        {
                            <a href="" class="btn btn-icon btn-social rounded white btn-sm">
                                <i class="fa fa-facebook"></i>
                                <i class="fa fa-facebook indigo"></i>
                            </a>
                        }
                        @if (accountModel.TwitterLink != null)
                        {
                            <a href="" class="btn btn-icon btn-social rounded white btn-sm">
                                <i class="fa fa-twitter"></i>
                                <i class="fa fa-twitter light-blue"></i>
                            </a>
                        }
                        @if (accountModel.InstagramLink != null)
                        {
                            <a href="" class="btn btn-icon btn-social rounded white btn-sm">
                                <i class="fa fa-instagram"></i>
                                <i class="fa fa-instagram red"></i>
                            </a>
                        }
                    </div>
                    <a href="" data-toggle="modal" data-target="#Info" class="btn btn-sm primary btn-rounded m-b">Cập nhật thông tin</a>
                    <a href="" data-toggle="modal" data-target="#Pass" class="btn btn-sm primary btn-rounded m-b">Cập nhật mật khẩu</a>
                    <a class="btn btn-sm primary btn-rounded m-b" href="javascript:void(0);" onclick="javascript:introJs().start();">Show me how</a>
                </div>
            </div>

        </div>
    </div>
</div>
