
@{
    ViewBag.Title = "ListFont";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}


@model IEnumerable<MyWebsite.Models.Language>

<style>
    table th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<div class="padding">
    <div class="m-b black">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>

        </ol>
    </div>
    <div class="box">
        <div class="box-header blue">
            <h2>Danh sách truyện</h2>

        </div>
        <div style="top:6px" class="box-tool">
            <button class="btn btn-default" data-toggle="modal" data-target="#m-a-f">Thêm ngôn ngữ</button>
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b">
                    <thead>
                        <tr>
                            <th>LanguageId</th>
                            <th>Tên ngôn ngữ</th>
                            <th>tên viết tắt</th>
                            <th>Mô tả</th>
                            <th>Icon</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">


                                    @item.LanguageId

                                </td>
                                <td class="center">
                                    @item.FullName
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>Icon</td>
                                <td class="center">
                                    @if (item.StatusActive == 0)
                                    {
                                        <span>Đang sử dụng</span>
                                    }
                                    else
                                    {<span>Đang khóa</span>

                                    }

                                </td>
                                <td>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#m-a-f">Cập nhật</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div id="m-a-f" class="modal fade" data-backdrop="true" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm font mới</h5>
                </div>
                <form action="/Admin/Addfont" method="post" enctype="multipart/form-data">
                    <div class="modal-body">


                        <div class="form-group row">
                            <label class="col-sm-4 form-control-label">
                                <span>Tên ngôn ngữ</span>
                                <span style="color:red">(*)</span>
                            </label>
                            <div class="col-sm-8">

                                <input name="fontname" class="form-control" />
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 form-control-label">
                                <span>Tên viết tắt</span>
                                <span style="color:red">(*)</span>
                            </label>
                            <div class="col-sm-8">

                                <input name="fontname" class="form-control" />
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 form-control-label">
                                <span>Ghi chú</span>
                                <span style="color:red">(*)</span>
                            </label>
                            <div class="col-sm-8">

                                <input name="Note" class="form-control" />
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 form-control-label">
                                <span>trạng thái</span>
                                <span style="color:red">(*)</span>
                            </label>
                            <div class="col-sm-8">

                                <select class="form-control select2-bootstrap-append">
                                    <option value="0">Đang sử dụng</option>
                                    <option value="1">Đang khóa</option>
                                </select>
                            </div>

                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 form-control-label">
                                <span>File icon</span>
                                <span style="color:red">(*)</span>
                            </label>
                            <div class="col-sm-8">

                                <input name="fontupload" type="file" webkitdirectory mozdirectory class="form-control" />
                            </div>

                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn dark-white p-x-md" data-dismiss="modal">Hủy</button>
                        <button id="Invite" type="submit" class="btn danger p-x-md">Thêm</button>
                    </div>
                </form>
            </div> /.modal-content 
        </div>
    </div>
</div>





