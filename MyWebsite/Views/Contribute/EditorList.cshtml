
@model IEnumerable<MyWebsite.ViewModels.Manga.MangaModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .mr10 {
        margin-right: 20px;
    }
</style>
<div class="padding">
    <div class="m-b">
        <ol class="breadcrumb primary">
            <li class="breadcrumb-item"><a href="/Account/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách truyện</li>
        </ol>
    </div>
    <div class="box ">
       

        <div class="box-body">
            <div class="table-responsive">
                <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b ">
                    <thead>
                        <tr>
                            <th>Ảnh Bìa</th>
                            <th>Tên Truyện</th>
                            <th>Tác Giả</th>
                            <th>Trạng Thái</th>
                            <th>Ngày Tạo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">

                                    <span>
                                        <img class="img-thumbnail" src="~/Cover/@item.CoverLink" style="max-width:120px;max-height:80px" />
                                    </span>


                                </td>
                                <td class="center">
                                    <a href="/Truyen/QuanLyChuong/@item.MangaId">
                                        <span>
                                            @Html.DisplayFor(modelItem => item.FullName)
                                        </span>
                                    </a>
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.CreatAt)
                                </td>
                                <td>
                                    @if (item.FirstChapter == -1)
                                    {
                                        <button title="truyện này chưa có chương nào" disabled class="btn btn-default primary" href="/Contribute/Editor?ChapterId=@item.FirstChapter&CategoryId=1">
                                            Tải lên clear-text
                                        </button>
                                    }
                                    else
                                    {
                                        <a class="btn btn-default primary" href="/Contribute/Editor?ChapterId=@item.FirstChapter&CategoryId=1">
                                            Tải lên clear-text
                                        </a>
                                    }



                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>



