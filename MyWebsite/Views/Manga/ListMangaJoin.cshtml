
@model IEnumerable<MyWebsite.Models.Manga_Detail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="padding">
    <div class="m-b">
        <ol class="breadcrumb primary">
            <li class="breadcrumb-item"><a href="/Account/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách truyện đã tham gia</li>
        </ol>
    </div>
    <div class="box">
        <div class="box-header primary">
           <h2>DANH SÁCH TRUYỆN ĐÃ THAM GIA</h2>
        </div>
     <div class="box-body">
            <div class="table-responsive">
                <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b">
                    <thead>
                        <tr>
                            <th>Ảnh Bìa</th>
                            <th>Tên Truyện</th>
                            <th>Trạng thái</th>
                            <th>Thời gian tạo</th>
                            <th>Vai trò</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ListManga != null)
                        {
                            foreach (var item in ViewBag.ListManga)
                            {
                                <tr>
                                    <td class="center">
                                        <span>
                                            <img src="~/Cover/@Model.FirstOrDefault(m => m.MangaId == item).Manga.CoverLink" style="max-width:150px" />
                                        </span>
                                    </td>
                                    <td class="center">

                                        <span>
                                            @Model.FirstOrDefault(m => m.MangaId == item).Manga.FullName
                                        </span>

                                    </td>

                                    <td class="center">
                                        @Model.FirstOrDefault(m => m.MangaId == item).Manga.Status.FullName
                                    </td>
                                    <td class="center">
                                        @Model.FirstOrDefault(m => m.MangaId == item).Manga.CreateAt
                                    </td>
                                    <td class="center">

                                        @foreach (var item1 in Model.Where(m => m.MangaId == item))
                                        {

                                            <span>
                                                @item1.Role.FullName
                                                <br />
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }

                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>



