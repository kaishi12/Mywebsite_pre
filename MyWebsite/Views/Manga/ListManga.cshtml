
@model IEnumerable<MyWebsite.ViewModels.Manga.MangaModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
  
</style>
<div class="padding">
    <div class="m-b primary">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Account/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách truyện đã tạo</li>
        </ol>
    </div>
    <div class="box black">
        @using (Html.BeginForm("ListManga", "Manga", FormMethod.Post))
        {
            <div class="box-body">
                <div class="table-responsive">
                    <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b black">
                        <thead>
                            <tr>
                                <th>Ảnh Bìa</th>
                                <th>Thông tin</th>
                                <th>Tổng chương</th>
                                <th>Tổng lượt xem</th>
                                <th>Tổng bản dịch</th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>

                                    <span>
                                        <img class="img-thumbnail"   src="~/Cover/@item.CoverLink" style="max-width:120px;max-height:80px" />
                                    </span>


                                </td>
                                <td class="center">
                                    <span>
                                        <span class="text-primary">Tên truyện:</span>  @Html.DisplayFor(modelItem => item.FullName) 
                                    </span>
                                    <br />
                                    <span class="pull-left">
                                        <span class="text-primary">Tác giả:</span> <text class="text-muted">@Html.DisplayFor(modelItem => item.Author)</text>   
                                    </span>

                                    <span class="pull-right">
                                        <span class="text-primary">Trạng thái:</span>   @Html.DisplayFor(modelItem => item.status)
                                    </span>
                                    <br />
                                    <span>
                                        <span class="text-primary">Cập nhật lần cuối:</span>     @Html.DisplayFor(modelItem => item.CreatAt)
                                    </span>
                                    <br />
                                    <span>
                                        <span class="text-primary">Mô tả:</span>     @Html.DisplayFor(modelItem => item.Description)
                                    </span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.CreatAt)
                                </td>
                               
                                <td>
                                    <a href="~/UpdateManga/@item.MangaId">
                                        <i class="fa fa-edit fa-lg" style="margin-right:10px;color:cornflowerblue" title="Cập nhật truyện"></i>

                                    </a>
                                    <a href="/ListChapter/@item.MangaId">
                                        <i class="fa  fa-list-ol fa-lg" title="Danh sách chương" style="margin-right:10px;color:red"></i>
                                    </a>
                                    @if (@item.StatusActive == 0)
                                    {
                                        <i class="fa fa-unlock fa-lg text-primary" title="Cập nhật truyện"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-lock fa-lg text-lock" title="Cập nhật truyện"></i>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

</div>



