<div id="chapter" class="chapter">
    <div class="manga-info-chapter">
        <div class="row title-list-chapter">
            <span>Tên chương</span>
            <span>Lượt xem</span>
            <span>Thời gian cập nhật</span>
        </div>
        <div class="chapter-list">
            @foreach (var truyen in Model)
            {
                <div class="row">
                    <span><a id="updatebookmarkb" data-manga-id="@truyen.MangaId" data-chapter-id="@truyen.ChapterId" href="/read/@truyen.Alias/@truyen.MangaId-@truyen.ChapterId/@ViewBag.CurLang" title="@truyen.FullName">@truyen.FullName</a></span>
                    <span>@truyen.ViewNumber</span>
                    <span>@truyen.CreateAt</span>
                </div>
            }
        </div>
    </div>
</div>


