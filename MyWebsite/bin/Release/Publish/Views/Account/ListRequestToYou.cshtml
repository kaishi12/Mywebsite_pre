@model IEnumerable<MyWebsite.Models.Manga_Detail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using MyWebsite.Service.Common;
<style>
</style>
<div class="padding">
    <div class="m-b primary">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Account/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách truyện đã tạo</li>
        </ol>
    </div>
    <div class="box black">
        <div class="box-body">
            <div class="table-responsive">
                <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b black">
                    <thead>
                        <tr>
                            <th>Ảnh Bìa</th>
                            <th>Thông tin truyện</th>
                            <th>Tên cá nhân</th>
                            <th>Vị trí</th>
                            <th>Thời gian</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>

                                    <span>
                                        <img class="img-thumbnail" src="~/Cover/@item.Manga.CoverLink" style="max-width:120px;max-height:80px" />
                                    </span>


                                </td>
                                <td class="center">
                                    <span>
                                        <span class="text-primary">Tên truyện:</span>  @Html.DisplayFor(modelItem => item.Manga.FullName)
                                    </span>
                                    <br />
                                    <span class="pull-left">
                                        <span class="text-primary">Tác giả:</span> <text class="text-muted">@Html.DisplayFor(modelItem => item.Manga.Author)</text>
                                    </span>

                                    <span class="pull-right">
                                        <span class="text-primary">Trạng thái:</span>   @Html.DisplayFor(modelItem => item.Manga.Status.FullName)
                                    </span>
                                    <br />
                                    <span>
                                        <span class="text-primary">Cập nhật lần cuối:</span>     @Html.DisplayFor(modelItem => item.Manga.CreateAt)
                                    </span>
                                    <br />
                                    <span>
                                        <span class="text-primary">Mô tả:</span>     @Html.DisplayFor(modelItem => item.Manga.Description)
                                    </span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.UserName)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Role.FullName)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.CreateAt)
                                </td>

                                <td>
                                    @if (item.Status == (int)StatusMember.Accept)
                                    {
                                        <a><i class="fa fa-check fa-lg text-primary" title="Đã duyệt"></i></a>
                                    }
                                    else
                                    {
                                        <i style="display:none" class="Accept fa fa-check fa-lg text-primary" title="Đã duyệt"></i>
                                        <button class="ChangeStatus btn btn-sm btn-outline b-primary text-primary" data-placement="top" title="Cập nhật" data-language="@item.Language" data-roleid="@item.RoleId" data-username="@item.Account.UserName" data-status="2" data-mangaid="@item.MangaId">Duyệt</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
@section Scripts
{

    <script>
        $(function () {
            $(".ChangeStatus").on("click", function () {
                var thisbutton = $(this);
                //console.log(thisbutton.data("language"));
                if (confirm("Bạn có đồng ý yêu cầu này?")) {
                    $.ajax({
                        url: "/Account/ChangeStatusMangaDetail",
                        type: 'post',
                        data: {
                            UserName: thisbutton.data("username")
                            , MangaId: thisbutton.data("mangaid")
                            , RoleId: thisbutton.data("roleid")
                            , Status: thisbutton.data("status")
                            , language: thisbutton.data("language")
                        },
                        success: function (result) {
                            if (result == "1") {
                                alert("Cập nhật thành công!");

                                thisbutton.parent().find(".Accept").fadeIn();
                                thisbutton.fadeOut();
                            }
                            else
                                alert("Cập nhật thất bại, vui lòng thử lại sau!");
                        },
                    });
                };


            })
        })
    </script>
}



