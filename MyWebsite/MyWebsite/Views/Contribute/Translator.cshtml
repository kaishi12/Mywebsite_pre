@model MyWebsite.Models.Page
@{
    ViewBag.Title = "PageDetail";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<style>


    table {
        border-collapse: collapse;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div class="padding">
    <div class="m-b black rounded">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Account/UserManagment">Home</a></li>
            <li class="breadcrumb-item"><a href="/Contribute/TranslatorList">Dịch truyện</a></li>

        </ol>
    </div>
    <div class="box">
        <div class="box-header blue">
            <h2>DỊCH TRUYỆN: @ViewBag.MangaFullName</h2>
        </div>
        <div class="box-body m-b">
            <div class="col-sm-4" style="padding-bottom:10px;padding-left:0px">
                <select class="form-control c-select" id="SelectChapter" name="SelectChapter">
                    @foreach (var item in ViewBag.chapterlist)
                    {
                        if (ViewBag.ChapterId != null && ViewBag.ChapterId == item.ChapterId)
                        {
                            <option selected value="@item.ChapterId">@item.FullName</option>
                        }
                        else
                        {
                            <option value="@item.ChapterId">@item.FullName</option>
                        }
                    }
                </select>
            </div>
            <div class="row">
                <div id="DivCanvas" class="col-sm-6">
                    <img id="girl" hidden src="~/PageLink/@Model.PageLink" />
                    <canvas id="canvas" style="border:1px solid #000000;">

                        Your browser does not support the HTML5 canvas tag.
                    </canvas>
                    <input hidden value="@Model.PageId" id="PageId" />
                </div>
                <div class="col-sm-6">
                    <select class="form-control c-select" id="SelectPage" name="SelectPage">
                        @foreach (var item in ViewBag.listpage)
                        {
                            if (item.PageId == Model.PageId)
                            {
                                <option selected value="@item.PageId">@item.FullName</option>
                            }
                            else
                            {
                                <option value="@item.PageId">@item.FullName</option>
                            }
                        }
                    </select>

                    <div class="box ">
                        <div class="box-header primary">
                            <h3>Danh sách khung</h3>
                            <div class="box-tool">
                                <ul class="nav">
                                    <li class="nav-item inline">
                                        <a class="nav-link">
                                            <i onclick="Reload()" class="material-icons md-18"></i>
                                        </a>

                                    </li>
                                    <li class="nav-item inline dropdown">
                                        <span class="nav-link" data-toggle="dropdown">
                                            <i class="material-icons md-18"></i>
                                        </span>
                                        <div class="dropdown-menu dropdown-menu-scale pull-right dark">
                                            <span class="dropdown-item" onclick="LoadTable()">Áp dụng xoay</span>
                                            <span class="dropdown-item" onclick="DrawImg()">Xóa toàn bộ khung</span>
                                            <span class="dropdown-item" onclick="SaveCor()">Lưu</span>

                                        </div>
                                    </li>
                                </ul>
                            </div>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered m-0" id="tblEntAttributes">
                               
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th hidden>
                                                Tọa độ X
                                            </th>
                                            <th hidden>
                                                Tọa độ Y
                                            </th>
                                            <th hidden>
                                                Chiều dài
                                            </th>
                                            <th hidden>

                                                Chiều rộng
                                            </th>
                                            <th hidden>
                                                Độ Xoay
                                            </th>
                                            <th>
                                                Lời thoại
                                            </th>
                                            <th>
                                                Font chữ
                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        @if (Model.TextBoxes != null)
                                        {

                                            int count = 1;

                                            foreach (var item in Model.TextBoxes.Where(m => m.StatusActive == 0))
                                            {

                                                var Cor = item.Coordinate.Split(new char[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
                                                <tr>
                                                    <td>@count</td>
                                                    <td hidden class="attX">@Cor[0]</td>
                                                    <td hidden class="attY">@Cor[1]</td>
                                                    <td hidden class="attW">@item.Witdh</td>
                                                    <td hidden class="attH">@item.Height</td>
                                                    <td hidden><input style="width:40px" class="attDe" type="number" id="1" value="@(item.Degree + 90)" />  </td>
                                                    <td><input class="form-control" /></td>
                                                    <td><select class="form-control c-select">
                                                        <option>1</option>
                                                        </select></td>
                                                    <td><button class="btn btn-fw danger" onclick="Remove(this)">Áp dụng</button></td>
                                                    <td hidden>@item.TextBoxId </td>
                                                </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
            </div>
        </div>
    </div>
</div>
<!--<canvas hidden id="canvas1" width="1000" height="1000" style="border:1px solid #000000;">
    Your browser does not support the HTML5 canvas tag.
</canvas>-->

@section scripts
{
    <script src="~/LayoutUser/Page/Canvas.js"></script>
    <script>
        $("#SelectPage").on("change", function () {
            window.location.href = "/Contribute/Translator?ChapterId="+$("#SelectChapter").val()+"&PageId=" + $(this).val();
        })
        $("#SelectChapter").on("change", function () {
            window.location.href = "/Contribute/Translator?ChapterId=" + $(this).val();
        })
    </script>

}

