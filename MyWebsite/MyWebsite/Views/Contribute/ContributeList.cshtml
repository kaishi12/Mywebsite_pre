
@model IEnumerable<MyWebsite.Models.Manga>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .mr10 {
        margin-right: 20px;
    }
</style>
<div class="padding">
    <div class="m-b">
        <ol class="breadcrumb black">
            <li class="breadcrumb-item"><a href="/Account/UserManagment">Home</a></li>
            <li class="breadcrumb-item">Danh sách truyện đã tạo</li>
        </ol>
    </div>
    <div class="box">
        <div class="box-header">
           <h3>Upload Clear-text</h3>
        </div>
        
        <div class="box-body">
            <div class="table-responsive">
                <table ui-jp="dataTable" id="datatable" class="table table-striped b-t b-b">
                    <thead>
                        <tr>
                            <th >Ảnh Bìa</th>
                            <th >Tên Truyện</th>
                            <th >Tác Giả</th>
                            <th >Trạng Thái</th>
                            <th >Ngày Tạo</th>
                            <th ></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="center">

                                    <span>
                                        <img src="~/Cover/@item.CoverLink" style="max-width:150px" />
                                    </span>


                                </td>
                                <td class="center">
                                    <a href="/Truyen/QuanLyChuong/@item.MangaId">
                                        <span>
                                            @Html.DisplayFor(modelItem => item.FullName)
                                        </span>
                                    </a>
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.Status.FullName)
                                </td>
                                <td class="center">
                                    @Html.DisplayFor(modelItem => item.CreateAt)
                                </td>
                                <td>
                                    <button class="btn  dark">Dịch truyện</button>

                                </td>
                            </tr>
                        }
                        


                    </tbody>
                </table>
            </div>
        </div>
        
    </div>

</div>
@section scripts
{
   

}


